{
  "name": "2023-09-orleans-cda-projet2-template",
  "type": "module",
  "workspaces": [
    "packages/types",
    "packages/backend/api",
    "packages/backend/migrations",
    "packages/backend/shared",
    "packages/frontend/web",
    "packages/frontend/mobile",
    "packages/frontend/shared"
  ],
  "scripts": {
    "dev": "bun concurrently \"bun run dev:*(!mobile)\"",
    "build": "bun concurrently \"bun run build:*\"",
    "lint": "bun eslint . --fix --report-unused-disable-directives",
    "lint:check": "bun eslint . --report-unused-disable-directives",
    "format": "bun prettier --write .",
    "format:check": "bun prettier --check .",
    "migrations:up": "cd ./packages/backend/migrations && bun run migrations:up",
    "migrations:latest": "cd ./packages/backend/migrations && bun run migrations:latest",
    "migrations:down": "cd ./packages/backend/migrations && bun run migrations:down",
    "migrations:generate": "cd ./packages/backend/migrations && bun run migrations:generate",
    "compose:up": "docker compose -f ./deployment/docker-compose.yml up -d",
    "compose:down": "docker compose -f ./deployment/docker-compose.yml down",
    "dev:backend:api": "cd ./packages/backend/api && bun run dev",
    "dev:frontend:web": "cd ./packages/frontend/web && bun run dev",
    "dev:frontend:mobile": "cd ./packages/frontend/mobile && bun run start",
    "build:backend:api": "cd ./packages/backend/api && bun run build",
    "build:frontend:web": "cd ./packages/frontend/web && bun run build",
    "delete": "bun concurrently \"bun run delete:*\"",
    "delete:dist": "find . -type d -name dist -prune -exec rm -rf {} +",
    "delete:expo": "find . -type d -name .expo -prune -exec rm -rf {} +",
    "delete:lock": "find . -type f -name bun.lockb -prune -exec rm {} +",
    "delete:node_modules": "find . -type d -name node_modules -prune -exec rm -rf {} +",
    "delete:vite": "find . -type d -name .vite -prune -exec rm -rf {} +",
    "pre:commit": "bun ./.tools/check-branch",
    "postinstall": "bun husky install && bun ./.tools/auto-detect-ip",
    "debug": "bun ./.tools/debug"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "bun-types": "latest",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "eslint-plugin-unicorn": "^49.0.0",
    "eslint-plugin-workspaces": "^0.10.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2"
  }
}
